@using BlazorTextEditor.ClassLib.TextEditor
@using BlazorTextEditor.ClassLib.Context
@inherits LayoutComponentBase

<ContextBoundary ContextRecord="ContextFacts.GlobalContext"
                 ClassCssString="@($"bte_main-layout {UnselectableClassCss} {ThemeStateWrap.Value.ActiveThemeRecord.ClassCssString}")"
                 StyleCssString="@($"font-size: {FontStateWrap.Value.FontSizeInPixels}px;")">
    <BlazorTextEditor.RazorLib.BlazorTextEditorRazorLibInitializer />
    <BlazorTextEditor.RazorLib.DialogCase.DialogInitializer />
    <BlazorTextEditor.RazorLib.DragCase.DragDisplay />
    
    <BlazorTextEditorHeader />
    
    <BlazorTextEditorBody BodyElementDimensions="_bodyElementDimensions" />
    
    <BlazorTextEditor.RazorLib.ResizableCase.ResizableRow TopElementDimensions="_bodyElementDimensions"
                                                          BottomElementDimensions="_footerElementDimensions"
                                                          ReRenderFuncAsync="ReRenderAsync" />
    
    <BlazorTextEditorFooter FooterElementDimensions="_footerElementDimensions" />
</ContextBoundary>
