@using BlazorTextEditor.ClassLib.Context
@using BlazorTextEditor.ClassLib.Dropdown
@using BlazorTextEditor.RazorLib.Dropdown
@using BlazorTextEditor.RazorLib.Menu

<ContextBoundary ContextRecord="ContextFacts.MainLayoutHeaderContext"
                 ClassCssString="bte_header">

    <BlazorTextEditor.RazorLib.Settings.SettingsDialogEntryPoint />
    
    <div style="position: relative;">
        <button @onclick="AddActiveFileDropdown"
                class="btn btn-primary">
            File
        </button>
        
        <DropdownDisplay DropdownKey="_dropdownKeyFileDropdown"
                         DropdownPositionKind="DropdownPositionKind.Vertical">
            <div class="bte_dropdown-display-default-background">
                <MenuDisplay MenuRecord="_fileMenu" />
            </div>
        </DropdownDisplay>
    </div>
    
    <ActiveContextRecordsDisplay />
</ContextBoundary>